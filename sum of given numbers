#include <stdio.h>

int main()
{
    int i,j,sum=0;
    printf("enter a number");
    scanf("%d",&i);
    while(i>0)
    {
        j=i%10;
        sum=sum+j;
        i=i/10;
    }
    printf("sum of given numbers=%d",sum);

    return 0;
}
